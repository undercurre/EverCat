{
  "name": "evercat",
  "version": "1.0.0",
  "description": "工作管理软件",
  "main": "main.js",
  "scripts": {
    "clean:vite": "rimraf node_modules/.vite/deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run clean:vite && concurrently -k \"vite\" \"wait-on http://localhost:3000 && vite electron\"",
    "build": "vite build",
    "start": "vite electron",
    "electron:start": "electron-forge start",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make  --platform=win32 --arch=x64"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "EverCat",
            "authors": "lirh42",
            "iconUrl": "src/assets/tray-ico.ico",
            "setupIcon": "src/assets/icon.ico"
          }
        }
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@unocss/preset-uno": "^66.1.1",
    "@unocss/vite": "^66.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.1.0",
    "rimraf": "^6.0.1",
    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "unocss": "^66.1.1",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "electron-squirrel-startup": "^1.0.1",
    "gsap": "^3.13.0",
    "vite": "^6.3.5",
    "vue": "^3.4.0",
    "vue-loader": "^17.4.2",
    "vue-router": "^4.5.1"
  }
}
